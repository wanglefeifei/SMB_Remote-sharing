<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="dialogTheme">@style/AppCompatDialogStyle</item>
    </style>
    <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/AppCompatDialogWindowTitleStyle</item>
    </style>
    <style name="AppCompatDialogWindowTitleStyle" parent="RtlOverlay.DialogWindowTitle.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>
</resources>