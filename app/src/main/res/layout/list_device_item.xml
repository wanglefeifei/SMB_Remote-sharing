<?xml version="1.0" encoding="utf-8"?>
<com.kami.fileexplorer.widget.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="180dp"
    android:layout_height="180dp"
    android:orientation="horizontal"
    android:background="@drawable/selector_item_focus"
    android:padding="12dp">

    <com.kami.fileexplorer.widget.FSImageView
        android:id="@+id/device_icon"
        android:layout_width="220dp"
        android:layout_height="220dp"
        tools:src="@drawable/folder_icon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true">

        <com.kami.fileexplorer.widget.FSTextView
            android:id="@+id/device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/file_name_color"
            android:singleLine="true"
            android:padding="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:textSize="14sp"
            tools:text="YOUYI-SIZURU" />
    </RelativeLayout>

</com.kami.fileexplorer.widget.SquareRelativeLayout>